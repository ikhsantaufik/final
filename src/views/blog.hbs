<html>
  <head>
    <title>Personal Web</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../assets/css/nav.css" />
  </head>

  <body>
    <nav>
      <div class="left">
        <ul>
          <img src="../assets/image/logo.png" alt="logo" />
          <li class="active">
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/add-blog">Add Project</a>
          </li>
          <li>
            <a href="/testimonial">Testimonial</a>
          </li>
          <div class="log">
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link fw-bold active text-danger">Hello,
                  {{users}}</a>
              </li>
              <li class="nav-item ms-3">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/register">Register</a>
              </li>
              <li class="nav-item ms-3">
                <a class="nav-link" href="/login">Login</a>
              </li>
            {{/if}}
          </div>
        </ul>
      </div>
      <div class="d-flex justify-content-end">
        <div class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
          <div class="hamberger">
            <button onclick="openHamberger()">
              <i class="fa-solid fa-bars fa-2xl"></i>
            </button>
          </div>
        </div>
        <div class="right">
          <a class="btn btn-danger btn-submit ms-5" href="/contact-me">Contact
            Me</a>
        </div>
      </div>
    </nav>

    <div class="hamberger-bars-items" id="hamberger-bars-items">
      <a href="/" class="active">Home</a>
      <a href="/add-blog">Add Project</a>
      <a href="/testimonial">Testimonial</a>
      {{#if isLogin}}
        <a class="nav-item nav-link fw-bold active text-danger">Hello,
          {{users}}</a>
        <a class="nav-item ms-3 nav-link" href="/logout">Logout</a>
      {{else}}
        <a class="nav-item nav-link" href="/register">Register</a>
        <a class="nav-item ms-3 nav-link" href="/login">Login</a>
      {{/if}}
      <a href="/contact">Contact</a>
    </div>

    <div class="container" style="margin-top: 100px;">
      <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-danger btn-submit ms-5" href="/add-blog">Add New Blog</a>
      </div>

      {{#each data}}
        <div class="card mb-3" style="width: 100%;">
          <div class="row g-0">
            <div class="col-md-4 p-3">
              <img
                src="uploads/{{this.image}}"
                class="img-fluid"
                alt="image-review"
              />
            </div>

            <div class="col-md-8">
              <div class="card-body">
                {{#if this.isLogin}}
                  <div class="d-flex justify-content-end">
                    <a
                      href=""
                      class="btn btn-secondary text-decoration-none me-3 px-3 py-1"
                      style="font-size: 14px;"
                    >EDIT</a>
                    <a
                      href="/delete-blog/{{this.id}}"
                      class="btn btn-danger text-decoration-none px-3 py-1"
                      style="font-size: 14px;"
                    >DELETE</a>
                  </div>
                {{/if}}

                <h2 class="card-title m-0 p-0">
                  <a
                    class="text-decoration-none text-black m-0 p-0"
                    href="/blog/{{this.id}}"
                    target="_blank"
                  >{{this.title}}</a>
                </h2>

                <div
                  class="detail-blog-content m-0 p-0 mb-4"
                  style="font-size: 14px;"
                >
                  {{this.updatedAt}}
                  |
                  {{this.author}}
                </div>

                <p class="card-text m-0 p-0">{{this.content}}</p>

                <p class="card-text text-end align-text-bottom m-0 p-0">
                  <small class="text-muted">Last updated 3 mins ago</small>
                </p>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </body>
  <script src="../assets/js/nav.js"></script>
</html>