<html>

  <head>
    <title>Creating Blog Page - detail</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/assets/css/blog.css" />
    <link rel="stylesheet" href="../assets/css/nav.css" />
  </head>

  <body>
    <!-- NavBar -->
    <nav>
      <div class="left">
        <ul>
          <img src="../assets/image/logo.png" alt="logo" />
          <li class="active">
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/add-blog">Add Project</a>
          </li>
          <li>
            <a href="/testimonial">Testimonial</a>
          </li>
          <div class="log">
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link fw-bold active text-danger">Hello,
                  {{users}}</a>
              </li>
              <li class="nav-item ms-3">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/register">Register</a>
              </li>
              <li class="nav-item ms-3">
                <a class="nav-link" href="/login">Login</a>
              </li>
            {{/if}}
          </div>
        </ul>
      </div>
      <div class="d-flex justify-content-end">
        <div class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
          <div class="hamberger">
            <button onclick="openHamberger()">
              <i class="fa-solid fa-bars fa-2xl"></i>
            </button>
          </div>
        </div>
        <div class="right">
          <a class="btn btn-danger btn-submit ms-5" href="/contact-me">Contact
            Me</a>
        </div>
      </div>
    </nav>

    <div class="hamberger-bars-items" id="hamberger-bars-items">
      <a href="/" class="active">Home</a>
      <a href="/add-blog">Add Project</a>
      <a href="/testimonial">Testimonial</a>
      {{#if isLogin}}
        <a class="nav-item nav-link fw-bold active text-danger">Hello,
          {{users}}</a>
        <a class="nav-item ms-3 nav-link" href="/logout">Logout</a>
      {{else}}
        <a class="nav-item nav-link" href="/register">Register</a>
        <a class="nav-item ms-3 nav-link" href="/login">Login</a>
      {{/if}}
      <a href="/contact">Contact</a>
    </div>

    <!-- Blog -->
    <div class="blog-detail">
      <div class="blog-detail-container">
        <h1>{{data.title}}</h1>
        <div class="author">12 Jul 2021 22:30 WIB | Ichsan Emrald Alamsyah</div>
        <img src="/assets/image/blog-img.png" alt="detail" />
        <p>
          {{data.content}}
        </p>
      </div>
    </div>

  </body>
  <script src="../assets/js/nav.js"></script>

</html>