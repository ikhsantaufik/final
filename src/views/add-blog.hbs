<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ADD BLOG</title>

    <link rel="stylesheet" href="../assets/css/style_blog.css" />
    <link rel="stylesheet" href="../assets/css/nav.css" />

    <!-- script font awesome -->
    <script
      src="https://kit.fontawesome.com/b9d0ad08e2.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <!-- Navbar -->
    <nav>
      <div class="left">
        <ul>
          <img src="../assets/image/logo.png" alt="logo" />
          <li class="active">
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/add-blog">Add Project</a>
          </li>
          <li>
            <a href="/testimonial">Testimonial</a>
          </li>
          <div class="log">
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link fw-bold active text-danger">Hello,
                  {{users}}</a>
              </li>
              <li class="nav-item ms-3">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/register">Register</a>
              </li>
              <li class="nav-item ms-3">
                <a class="nav-link" href="/login">Login</a>
              </li>
            {{/if}}
          </div>
        </ul>
      </div>
      <div class="d-flex justify-content-end">
        <div class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
          <div class="hamberger">
            <button onclick="openHamberger()">
              <i class="fa-solid fa-bars fa-2xl"></i>
            </button>
          </div>
        </div>
        <div class="right">
          <a class="btn btn-danger btn-submit ms-5" href="/contact-me">Contact
            Me</a>
        </div>
      </div>
    </nav>

    <div class="hamberger-bars-items" id="hamberger-bars-items">
      <a href="/" class="active">Home</a>
      <a href="/add-blog">Add Project</a>
      <a href="/testimonial">Testimonial</a>
      {{#if isLogin}}
        <a class="nav-item nav-link fw-bold active text-danger">Hello,
          {{users}}</a>
        <a class="nav-item ms-3 nav-link" href="/logout">Logout</a>
      {{else}}
        <a class="nav-item nav-link" href="/register">Register</a>
        <a class="nav-item ms-3 nav-link" href="/login">Login</a>
      {{/if}}
      <a href="/contact">Contact</a>
    </div>

    <!-- ADD PROJECT -->
    <div class="container add">
        <div class="right">
            <a href="add-blog" class="btn btn-primary">Add New Project</a>
        </div>
    <div class="container">
      <h1>ADD MY PROJECT</h1>

      <div class="container-form">
        <form method="post" action="/add-blog"/>
          <!-- Project Name -->
          <div class="title">
            <!-- title-->
            <label for="input-title">Project Name</label>
            <input class="form-control" type="text" placeholder="Project Name" aria-label="default input example" id="input-title" name="title">
          </div>

          <!-- Date -->
          <div class="date">
            <!-- date-->
            <div class="start-date">
              <label for="input-start-date">Start Date</label>
              <input type="date" name="date1" id="input-start-date" />
            </div>
            <div class="end-date">
              <label for="input-end-date">End Date</label>
              <input type="date" name="date2" id="input-end-date" />
            </div>
          </div>

          <!-- Description -->
          <div class="description mb-3">
            <!-- description-->
            <label for="input-blog-description">Description</label>
            <textarea id="input-blog-description" name="description"></textarea>
          </div>

          <!-- Technologies -->
          <div class="tech">
            <!-- tech-->
            <label>Technologies</label>
            <div class="tech-checkbox">
              <div>
                <input
                  type="checkbox"
                  id="checkbox-reactjs"
                  name="reactjs"
                  value="fa-brands fa-react"
                />
                <label>React JS</label>
              </div>
              <div>
                <input
                  type="checkbox"
                  id="checkbox-nodejs"
                  name="nodejs"
                  value="fa-brands fa-node-js"
                />
                <label>Node JS</label>
              </div>
              <div>
                <input
                  type="checkbox"
                  id="checkbox-java"
                  name="java"
                  value="fa-brands fa-java"
                />
                <label>Java</label>
              </div>
              <div>
                <input
                  type="checkbox"
                  id="checkbox-javascript"
                  name="javascript"
                  value="fa-brands fa-js"
                />
                <label>Javascript</label>
              </div>
            </div>
          </div>

          <!-- Upload Image -->
          <div class="upload-image">
            <!-- images-->
            <label for="input-blog-image">choose</label>
            <input action="/profile-upload-single" enctype="multipart/form-data" type="file" name="image" id="input-blog-image"/>
            <i class="fa-solid fa-paperclip"></i>
          </div>

          <!-- Submit -->
          <div class="submit-btn">
            <button type="submit">submit</button>
          </div>
        </form>
      </div>
    </div>

    <!-- PROJECT LIST -->
    <div class="container-project-list">
      <div class="container-blog">
        <h1>MY PROJECT</h1>
        <div class="blog-card" id="blog-card">
          <!-- dynamic content would be here -->
        </div>
      </div>
    </div>

  </body>
    <!-- scrip blog js -->
    <script src="../assets/js/nav.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>