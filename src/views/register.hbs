<html>
  <head>
    <title>Personal Web</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../assets/css/nav.css" />
  </head>

  <body>
    <nav>
      <div class="left">
        <ul>
          <img src="../assets/image/logo.png" alt="logo" />
          <li class="active">
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/add-blog">Add Project</a>
          </li>
          <li>
            <a href="/testimonial">Testimonial</a>
          </li>
          <div class="log">
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link fw-bold active text-danger">Hello,
                  {{users}}</a>
              </li>
              <li class="nav-item ms-3">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/register">Register</a>
              </li>
              <li class="nav-item ms-3">
                <a class="nav-link" href="/login">Login</a>
              </li>
            {{/if}}
          </div>
        </ul>
      </div>
      <div class="d-flex justify-content-end">
        <div class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
          <div class="hamberger">
            <button onclick="openHamberger()">
              <i class="fa-solid fa-bars fa-2xl"></i>
            </button>
          </div>
        </div>
        <div class="right">
          <a class="btn btn-danger btn-submit ms-5" href="/contact-me">Contact
            Me</a>
        </div>
      </div>
    </nav>

    <div class="hamberger-bars-items" id="hamberger-bars-items">
      <a href="/" class="active">Home</a>
      <a href="/add-blog">Add Project</a>
      <a href="/testimonial">Testimonial</a>
      {{#if isLogin}}
        <a class="nav-item nav-link fw-bold active text-danger">Hello,
          {{users}}</a>
        <a class="nav-item ms-3 nav-link" href="/logout">Logout</a>
      {{else}}
        <a class="nav-item nav-link" href="/register">Register</a>
        <a class="nav-item ms-3 nav-link" href="/login">Login</a>
      {{/if}}
      <a href="/contact">Contact</a>
    </div>

    <div class="container d-flex justify-content-center">
      <div class="w-50">
        <h3 class="text-center mt-5">REGISTER</h3>
        <form method="post" action="/register">
          <div class="mb-3">
            <label for="username" class="form-label">Name</label>
            <input
              type="text"
              name="name"
              class="form-control"
              id="username"
              aria-describedby="emailHelp"
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              name="email"
              class="form-control"
              id="email"
              aria-describedby="emailHelp"
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              name="password"
              id="password"
            />
          </div>
          <button type="submit" class="btn btn-danger mt-3 px-5">Submit</button>
        </form>
      </div>
    </div>
  </body>
  <script src="../assets/js/nav.js"></script>
</html>